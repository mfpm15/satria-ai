# SATRIA AI Configuration
# Copy this file to .env and configure your values

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database URLs
POSTGRES_URL=postgresql://satria:satria123@localhost:5432/satria
NEO4J_URL=bolt://neo4j:satria123@localhost:7687
REDIS_URL=redis://localhost:6379/0
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=satria-token-123
INFLUXDB_ORG=satria-ai
INFLUXDB_BUCKET=metrics

# Message Brokers
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=satria

# Vector Store
CHROMA_URL=http://localhost:8000
CHROMA_COLLECTION_NAME=satria_kb

# AI Models - OpenRouter.ai Integration (REQUIRED)
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=openrouter/sonoma-sky-alpha
OPENROUTER_SITE_URL=https://github.com/your-org/satria-ai
OPENROUTER_SITE_NAME=SATRIA AI

# Legacy AI Models (fallback)
OLLAMA_URL=http://localhost:11434
DEFAULT_LLM_MODEL=llama3.1:8b
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# External Integrations
# EDR
CROWDSTRIKE_CLIENT_ID=
CROWDSTRIKE_CLIENT_SECRET=
